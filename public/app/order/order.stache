<div class="order-form">
  {{#if restaurant.isPending}}
    <div class="loading"></div>
  {{else}}
    {{#restaurant.value}}
    <h3>Order from {{name}}</h3>
    <form can-submit="placeOrder">
      <!-- tabs -->
      <ul class="nav nav-tabs">
        <li class="active"><a href="#">Lunch Menu</a></li>
        <li><a href="#">Dinner Menu</a></li>
      </ul>
      <!-- tabs -->

      <div class="tab-pane">
        <p class="text-error">Please choose an item</p>
        <ul class="list-group">
          {{#each menu.lunch}}
          <li class="list-group-item">
            <label>
              <input type="checkbox" can-click="{select this @element.0.checked}">
              {{name}} <span class="badge">${{price}}</span>
            </label>
          </li>
          {{/each}}
        </ul>
      </div>

      <div class="form-group">
        <label class="control-label">Name:</label>
        <input type="text" class="form-control" can-value="{order.name}">
        <p>Please enter your name.</p>
      </div>
      <div class="form-group has-error">
        <label class="control-label">Address:</label>
        <input type="text" class="form-control" can-value="{order.address}">
        <p class="help-text">Please enter your address.</p>
      </div>
      <div class="form-group">
        <label class="control-label">Phone:</label>
        <input type="text" class="form-control" can-value="{order.phone}">
        <p>Please enter your phone number.</p>
      </div>
      <div class="submit">
        <h4>Total: ${{order.total}}</h4>
        {{#if saveStatus.isResolved}}
          Received order (Confirmation: {{saveStatus.value._id}})
        {{else}}
          {{#if saveStatus.isPending}}
            <div class="loading"></div>
          {{else}}
            <button type="submit" class="btn">Place My Order!</button>
          {{/if}}
        {{/if}}
      </div>
    </form>
    {{/restaurant.value}}
  {{/if}}
</div>
